<h1>Create a New Planet 🪐</h1>

<% if flash[:my_errors] %>
  <ul>
    <% flash[:my_errors].each do |error| %>
      <li><%= error %></li>
    <% end%>
  </ul>
<% end%>

<%= form_for @planet do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
  <br>
  <%= f.label :size %>
  <%= f.number_field :size %>
  <br>
  <br>
  <%= f.submit %>
<% end %>





