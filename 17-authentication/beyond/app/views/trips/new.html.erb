<h1>Go on a Trip</h1>

<div class="form-container">
  <%= form_for @trip do |f| %>
    <div class='form-input'>
      <%= f.label :reason %>
      <%= f.text_field :reason %>
    </div>

    <div class='form-input'>
      <%= f.label :length %>
      <%= f.number_field :length %>
    </div>

    <div class='form-input'>
      <%= f.label :alien_id %>
      <%= f.collection_select :alien_id, @aliens, :id, :name  %>
    </div>

    <div class='form-input'>
      <%= f.label :planet_id %>
      <%= f.collection_select :planet_id, @planets, :id, :name %>
    </div>
    

    <%= f.submit class: "form-btn"%>
  <% end %>
</div>

